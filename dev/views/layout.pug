doctype html
html
    head
        title= 'Blog | Pi of things'
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/content/bootstrap/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/content/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/content/font-awesome-4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet' href='/content/Site.css')
        link(rel='stylesheet' href='/content/prism/prism.css')
        script(type="text/javascript" src="/libs/prism/prism.js")
        script(type="text/javascript" src="/libs/jquery/jquery-3.6.0.min.js")
        script(type="text/javascript" src="/libs/bootstrap/bootstrap.min.js")
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-blog")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(href="/") #[img(class="navbar-brand" src="/images/piot-white.png")]
                .navbar-collapse.collapse(id="navbar-blog")
                    ul(class="nav navbar-nav")
                        li.active #[a(href="/blog") Blog]
                        li #[a(href="http://github.com/piofthings/web") Source]

        .body-content
            .container-flex
                .piot-header
                    .container
                        h1.piot-h1 Blog of things
                .navbar
                    .div(style="border-top: solid 1px #ddd;border-bottom: solid 1px #ddd")
                        .container
                            .navbar-collapse
                                ul(class="nav navbar-nav")
                                    li #[a(href="/blog") All]


            .container
                .row
                    .col-sm-8
                        block content
                    .col-sm-4.hidden-xs
                        include includes/indexSidebar
