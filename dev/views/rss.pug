doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Pi of things
    link https://piofthings.net/
    description Pi of things
    atom:link(href='https://piofthings.net/rss' + tagUrl, rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'https://piofthings.net' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
