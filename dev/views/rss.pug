doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Pi of things
    link http://jsantell.github.io/poet
    description Pi of things RSS feed
    atom:link(href='https://piofthings.net/rss', rel='self', type='application/rss+xml')
    each post in posts
      var fullUrl = 'http://piofthings.net/' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
